<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>guja-be</application>
    <version>${appengine.app.version}</version>
    <threadsafe>true</threadsafe>
    
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
        <property name="guice.custom.loader" value="false" />
        <property name="jersey.config.server.tracing.type" value="ALL" />
    </system-properties>

    <static-files>
        <include path="/robots.txt" />
        <include path="/favicon.ico" />
        <include path="/**.png" />
        <include path="/**.gif" />
        <include path="/**.html" />
        <include path="/**.js" />
        <include path="/**.css" />
        <include path="/**.ttf" />
        <include path="/**.woff" />

        <!-- html static resources-->
        <include path="/html/**.*" />

  </static-files>
</appengine-web-app>
